{
    "version": 4,
    "env": {
        "platformName": "gcc-linux_x64",
        "myDefaultIncludePath": [
            "${workspaceFolder}",
            "${workspaceFolder}/out/install/${platformName}/include"
        ],
        "myGccCompilerPath": "/usr/bin/gcc",
        "myClangCompilerPath": "/usr/bin/clang"
    },
    "configurations": [
        {
            "name": "Linux",
            "intelliSenseMode": "gcc-x64",
            "includePath": [
                "${myDefaultIncludePath}"
            ],
            "defines": [],
            "forcedInclude": [],
            "compilerPath": "${myGccCompilerPath}",
            "cStandard": "gnu17",
            "cppStandard": "gnu++20",
            "configurationProvider": "ms-vscode.cmake-tools",
            "compileCommands": "${workspaceFolder}/out/build/${platformName}/compile_commands.json",
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            }
        }
    ]
}
